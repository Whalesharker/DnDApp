
<form method="post" action="/createCharacter">
    Name:
    <input type="text" id ="name" name="name">
    <br>
    Class:
    <select name = "characterclass">
      <% for(c of classes){%> 
          <option value="<%= c.name %>"><%= c.name %></option>
      <% } %>
    </select>
    <br>
    Level:
    <input type="number" id = "level" name="level">
    <br>
    Race:
    <select name = "race">
        <% for(r of races){%> 
            <option value="<%= r.name %>"><%= r.name %></option>
        <% } %>
    </select>
    <br>
    str: <input type="number" id = "str" name="str" max = 20 min = 3>
    <br>
    dex: <input type="number" id = "dex" name="dex" max = 20 min = 3>
    <br>
    con: <input type="number" id = "con" name="con" max = 20 min = 3>
    <br>
    int: <input type="number" id = "int" name="int" max = 20 min = 3>
    <br>
    wis: <input type="number" id = "wis" name="wis" max = 20 min = 3>
    <br>
    cha: <input type="number" id = "cha" name="cha" max = 20 min = 3>
    <br />
    Backstory:
    <textarea id="backstory" name="backstory">insert backstory here.</textarea>
    Picture: <input type = "text" id = "pic" name = "pic">
    <input type="submit" />
  </form>
  
  